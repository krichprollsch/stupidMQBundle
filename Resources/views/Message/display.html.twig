<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> StupidMQ </title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
    <link href="{{ asset('bundles/cogstupidmq/css/main.css') }}" type="text/css" rel="stylesheet" />
</head>
<body>

    {# Menu #}
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">StupidMQ</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-8">
                <ul class="nav navbar-nav">
                    {% for queueName in queueNames %}
                        <li class="{{ app.request.get('queue') == queueName ? 'active' : '' }}">
                            <a href="{{ path('cog_stupidmq_display', { 'queue' : queueName }) }}">
                                {{ queueName }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>

    {# Data #}
    <div class="col-lg-10 col-lg-offset-1">

        <ul class="list-group">

            {% for message in messages %}

                <li class="list-group-item list-group-item-{{ message.stateClass }}">

                    <div class="title-area">
                        <div class="row">
                            <div class="col-sm-1">
                                #{{ message.id }}
                            </div>
                            <div class="col-sm-1">
                                <span class="label label-{{ message.stateClass }}">{{ message.state }}</span>
                            </div>
                            <div class="col-sm-5">
                                {{ message.feedback | slice(0, 40) }}{{ (message.feedback | length) > 40 ? '...' : '' }}
                            </div>
                            <div class="col-sm-2">
                                <em> <strong> Duration </strong> : {{ message.created_at | time_duration(message.updated_at) }} </em>
                            </div>
                            <div class="col-sm-2">
                                <em title="{{ message.created_at }}"> <strong> Sent </strong> : {{ time_diff(message.created_at) }} </em>
                            </div>
                            <div class="col-sm-1">
                                <div class="pull-right">
                                    <span class="glyphicon glyphicon-chevron-down"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="content-area">
                        <h4> Feedback : </h4>
                        <code>{{ message.feedback }}</code> <br />
                        <h4> Content : </h4>
                        <pre> {{ message.decodedContent | colorize | raw }} </pre>
                    </div>

                </li>

            {% else %}

                <p class="text-align-center"> No messages. </p>

            {% endfor %}

        </ul>

        <ul class="pager">
            <li class="previous {{ previousUrl is null ? 'disabled' : '' }}"><a href="{{ previousUrl }}">&larr; Previous</a></li>
            <li class="next"><a href="{{ nextUrl }}">Next &rarr;</a></li>
        </ul>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="{{ asset('bundles/cogstupidmq/js/main.js') }}" type="text/javascript"></script>

</body>
</html>